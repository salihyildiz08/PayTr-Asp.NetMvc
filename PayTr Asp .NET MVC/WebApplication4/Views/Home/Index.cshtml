
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper bosluk" style="padding-top:223px!important;">

    <!-- End .top-notice -->
    <!-- End .header -->

    <main class="main main-test">
        <div class="container checkout-container">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post" action="/Home/Paytr">
                        <h2 class="step-title">
                            Ödeme Bilgilerinzi giriniz
                        </h2>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>
                                        İsim Soyisim
                                        <abbr class="required" title="required">*</abbr>
                                    </label>
                                    <input type="text" class="form-control" name="ad" required="">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>
                                Tutar
                                <abbr class="required" title="required">*</abbr>
                            </label>
                            <input type="number" class="form-control" name="tutar" required="">
                        </div>
                        <div class="form-group">
                            <label>
                                Telefon Numarası
                                <abbr class="required" title="required">*</abbr>
                            </label>
                            <input type="tel" class="form-control" name="tel" required="">
                        </div>
                        <div class="form-group">
                            <label>
                                Email
                                <abbr class="required" title="required">*</abbr>
                            </label>
                            <input type="email" class="form-control" name="mail" required="">
                        </div>
                        <div class="form-group">
                            <label>
                                Açıklama
                                <abbr class="required" name="aciklama" title="required">*</abbr>
                            </label>
                            <input type="text" class="form-control" name="aciklama">
                        </div>
                        
                        <button class="btn btn-dark btn-place-order">
                            Ödeme Yap
                        </button>

                    </form>
                </div>
            </div>
        </div>
    </main>
</div>

